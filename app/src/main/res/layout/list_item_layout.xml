<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/item_corners"
    android:gravity="center_vertical"
    android:elevation="3dp"
    android:translationZ="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv"
        android:layout_marginLeft="20dp"
        android:src="@drawable/my_signify01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/my_shool"
            android:drawablePadding="8dp"
            android:paddingTop="10dp"
            android:text="a-103Classroom reservation"
            android:textColor="@color/text_bule"
            android:textSize="18dp" />
        <LinearLayout
            android:paddingTop="6dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawableLeft="@drawable/my_time"
                android:drawablePadding="8dp"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_start_time" />
            <TextView
                android:id="@+id/tvStartTime"
                android:text="2019-11-12 12:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@drawable/my_time"
                android:drawablePadding="8dp"
                android:textSize="14dp"
                android:text="@string/item_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvEndTime"
                android:text="2019-11-12 12:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginRight="20dp"
        android:src="@drawable/my_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
